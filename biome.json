{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noAssignInExpressions": "off"
			},
			"style": {
				"noNonNullAssertion": "off"
			}
		}
	},
	"css": {
		"formatter": {
			"enabled": true,
			"quoteStyle": "single",
			"indentStyle": "tab",
			"indentWidth": 4,
			"lineWidth": 80
		},
		"linter": {
			"enabled": true
		},
		"parser": {
			"cssModules": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"jsxQuoteStyle": "single",
			"semicolons": "asNeeded",
			"indentStyle": "tab",
			"indentWidth": 2,
			"trailingCommas": "all",
			"quoteProperties": "asNeeded",
			"lineWidth": 100,
			"bracketSpacing": true,
			"bracketSameLine": false
		}
	}
}
